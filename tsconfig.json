{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "./"
  ]
}